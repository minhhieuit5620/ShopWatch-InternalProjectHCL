
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}


<div class="page-wrapper bg-blue p-t-100 p-b-100 font-robo">
    <div class="wrapper wrapper--w680">
        <div class="card card-1">
            <div class="card-heading"></div>
            <div class="card-body">
                <h2 class="title">Login</h2>
                <form action="/Home/Login" method="post">
                    <div class="input-group">
                        <input class="input--style-1" required type="text" placeholder="NAME" name="username">
                    </div>
                    <div class="input-group">
                        <input class="input--style-1" required type="password" placeholder="PASSWORD" name="password">
                    </div>

                    <div class="p-t-20">
                        <button class="btn btn--radius btn--green" type="submit" id="toa">Login </button>
                        @*<input type="button" class="btn btn--radius btn--green"style="float:right; v"/>*@
                        <button class="btn btn--radius btn--green" type="button" style="float:right;"><a href="/Home/Register" style="text-decoration:none;color:#fff;">Register</a></button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

